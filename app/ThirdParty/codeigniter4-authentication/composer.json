{
    "name": "agungsugiarto/codeigniter4-authentication",
    "description": "provides an API for authentication and includes concrete authentication adapters for common use case scenarios",
    "keywords": ["codeigniter4", "authentication", "auth"],
    "license": "MIT",
    "authors": [
        {
            "name": "Agung Sugiarto",
            "email": "me.agungsugiarto@tgmail.com",
            "homepage": "https://agungsugiarto.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "codeigniter4/framework": "^4.0",
        "php": "^7.2",
        "fakerphp/faker": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "Fluent\\Auth\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "laminas/laminas-coding-standard": "^2.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Fluent\\Auth\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --testdox --colors=always"
    }
}
